<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginTop="@dimen/dimens_50"
    android:background="@android:color/transparent"
    android:orientation="horizontal"
    android:padding="@dimen/dimens_20"
    android:theme="@style/ThemeOverlay.AppCompat.Dark">
    <ImageView
        android:id="@+id/imageNavView"
        android:layout_width="90dp"
        android:layout_height="90dp"
        android:layout_marginTop="@dimen/dimens_5"
        android:contentDescription="@string/content_description_media"
        android:scaleType="centerCrop"
        android:fitsSystemWindows="true"
        app:srcCompat="@drawable/ic_user_account"
        app:tint="@color/white" />
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center_vertical"
        android:paddingStart="@dimen/nav_header_vertical_spacing"
        android:paddingEnd="0dp"
        android:orientation="vertical">
        <TextView
            android:id="@+id/textNavName"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/account_label1"
            style="@style/viewText" />
        <TextView
            android:id="@+id/textNavEmail"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/dimens_10"
            android:text="@string/account_label2"
            style="@style/viewText" />
    </LinearLayout>
</LinearLayout>