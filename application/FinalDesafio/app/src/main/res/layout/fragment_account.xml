<?xml version="1.0" encoding="utf-8"?>
<FrameLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fitsSystemWindows="true">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:fitsSystemWindows="true"
        tools:ignore="UselessParent">
        <TextView
            android:id="@+id/textNameView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_horizontal"
            android:layout_marginTop="@dimen/dimens_50"
            android:text=""
            style="@style/viewAccountText" />
        <TextView
            android:id="@+id/textEmailView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/dimens_10"
            android:gravity="center_horizontal"
            android:text=""
            style="@style/viewAccountText" />

        <com.google.android.material.button.MaterialButton
            android:id="@+id/account_button_edit"
            android:layout_width="@dimen/dimens_150"
            android:layout_height="@dimen/dimens_55"
            android:layout_marginTop="@dimen/dimens_20"
            android:layout_gravity="center_horizontal"
            android:text="@string/bt_account_edit"
            style="@style/Widget.MaterialComponents.Button.TextButton" />

    </LinearLayout>
</FrameLayout>